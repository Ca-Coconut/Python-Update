    <script>
        // 1. Banner qu·∫£ng c√°o ch·∫°y t·ª± ƒë·ªông
       document.addEventListener("DOMContentLoaded", function() {
    // --- KH√îI PH·ª§C T√çNH NƒÇNG CH·∫†Y CH·ªÆ BANNER ---
    const ads = [
        "KHAI XU√ÇN NH∆Ø √ù - L√å X√å H·∫æT √ù: GI·∫¢M ƒê·∫æN 60% TO√ÄN S√ÄN",
        "MI·ªÑN PH√ç V·∫¨N CHUY·ªÇN CHO ƒê∆†N H√ÄNG T·ª™ 300.000ƒê",
        "T·∫∂NG BOOKMARK G·ªñ CHO M·ªåI ƒê∆†N H√ÄNG TRONG H√îM NAY",
        "MUA S√ÅCH T·∫∂NG S√ÅCH - ∆ØU ƒê√ÉI GI·ªú V√ÄNG 12H - 14H"
    ];

    let currentAd = 0;
    const bannerElement = document.getElementById('promo-banner');

    if (bannerElement) {
        // ƒê·∫∑t hi·ªáu ·ª©ng chuy·ªÉn ƒë·ªïi m∆∞·ª£t m√† trong CSS b·∫±ng JS lu√¥n ƒë·ªÉ tr√°nh qu√™n
        bannerElement.style.transition = "opacity 0.9s ease-in-out";

        setInterval(() => {
            // 1. L√†m m·ªù ch·ªØ ƒëi
            bannerElement.style.opacity = 0;

            // 2. ƒê·ª£i 0.5 gi√¢y cho m·ªù h·∫≥n r·ªìi m·ªõi ƒë·ªïi ch·ªØ
            setTimeout(() => {
                currentAd = (currentAd + 1) % ads.length;
                bannerElement.innerText = ads[currentAd];
                
                // 3. Hi·ªán r√µ l·∫°i
                bannerElement.style.opacity = 1;
            }, 700); 

        }, 3400); // ƒê·ªïi m·ªói 3.5 gi√¢y
    } else {
        console.error("L·ªói: Kh√¥ng t√¨m th·∫•y ph·∫ßn t·ª≠ c√≥ id='promo-banner'. H√£y ki·ªÉm tra l·∫°i HTML.");
    }
    });
        // 2. X·ª≠ l√Ω gi·ªè h√†ng
        let cartCount = 0;
        document.querySelectorAll('.btn-add').forEach(button => {
            button.addEventListener('click', () => {
                cartCount++;
                document.getElementById('cart-count-badge').innerText = cartCount;
                
                // Show Toast
                const toast = document.getElementById('toast-msg');
                toast.classList.add('show');
                setTimeout(() => toast.classList.remove('show'), 3000);
            });
        });

        // 3. B·ªô l·ªçc gi√°
        const filterCheckboxes = document.querySelectorAll('#price-filters input');
        const bookCards = document.querySelectorAll('.book-card');

        filterCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', () => {
                const activeFilters = Array.from(filterCheckboxes).filter(c => c.checked);
                let visibleCount = 0;

                bookCards.forEach(card => {
                    const price = parseInt(card.getAttribute('data-price'));
                    if (activeFilters.length === 0) {
                        card.style.display = 'flex';
                        visibleCount++;
                    } else {
                        let isMatch = false;
                        activeFilters.forEach(filter => {
                            const [min, max] = filter.getAttribute('data-range').split('-').map(Number);
                            if (price >= min && price <= max) isMatch = true;
                        });
                        card.style.display = isMatch ? 'flex' : 'none';
                        if (isMatch) visibleCount++;
                    }
                });
                document.getElementById('result-count').innerText = `Hi·ªÉn th·ªã ${visibleCount} t·ª±a s√°ch ph√π h·ª£p`;
            });
        });
        // --- X·ª¨ L√ù N√öT V·ªÄ ƒê·∫¶U TRANG (Phi√™n b·∫£n m∆∞·ª£t t√πy ch·ªânh) ---
        const scrollBtn = document.getElementById("scrollToTopBtn");

        // 1. Hi·ªán n√∫t khi cu·ªôn xu·ªëng
        window.onscroll = function() { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 300 || document.documentElement.scrollTop > 300) {
                scrollBtn.style.display = "block";
            } else {
                scrollBtn.style.display = "none";
            }
        }

        // 2. X·ª≠ l√Ω khi b·∫•m n√∫t (Ch·∫°y h√†m cu·ªôn m∆∞·ª£t)
        scrollBtn.addEventListener("click", function() {
            // Tham s·ªë 1500 nghƒ©a l√† 1.5 gi√¢y. 
            // B·∫°n c√≥ th·ªÉ s·ª≠a th√†nh 2000 (2 gi√¢y) n·∫øu mu·ªën ch·∫≠m h∆°n n·ªØa.
            scrollToTopSlowly(1500); 
        });

        // H√†m t√≠nh to√°n chuy·ªÉn ƒë·ªông m∆∞·ª£t m√†
        function scrollToTopSlowly(duration) {
            const start = window.scrollY || document.documentElement.scrollTop;
            const startTime = performance.now();

            function animation(currentTime) {
                const timeElapsed = currentTime - startTime;
                const progress = Math.min(timeElapsed / duration, 1); // ƒê·∫£m b·∫£o ti·∫øn tr√¨nh max l√† 1

                // C√¥ng th·ª©c Easing (Ease Out Cubic): Gi√∫p chuy·ªÉn ƒë·ªông nhanh l√∫c ƒë·∫ßu v√† ch·∫≠m d·∫ßn khi ƒë·∫øn ƒë√≠ch
                const ease = 1 - Math.pow(1 - progress, 3);

                window.scrollTo(0, start * (1 - ease));

                if (timeElapsed < duration) {
                    requestAnimationFrame(animation); // Ti·∫øp t·ª•c ch·∫°y cho ƒë·∫øn khi h·∫øt th·ªùi gian
                }
            }

            requestAnimationFrame(animation);
        }
        // --- X·ª¨ L√ù SMART STICKY HEADER (Hi·ªán khi cu·ªôn l√™n, ·∫®n khi cu·ªôn xu·ªëng) ---
        let lastScrollTop = 0;
        const headerContainer = document.getElementById('sticky-header-container');

        window.addEventListener('scroll', function() {
            let scrollTop = window.pageYOffset || document.documentElement.scrollTop;

            // N·∫øu ƒëang ·ªü tr√™n c√πng trang web (top = 0) th√¨ lu√¥n hi·ªán header
            if (scrollTop <= 0) {
                headerContainer.classList.remove('header-hidden');
                lastScrollTop = scrollTop;
                return;
            }

            if (scrollTop > lastScrollTop) {
                // ƒêang cu·ªôn XU·ªêNG -> Th√™m class ƒë·ªÉ ·∫®N header
                headerContainer.classList.add('header-hidden');
            } else {
                // ƒêang cu·ªôn L√äN -> X√≥a class ƒë·ªÉ HI·ªÜN header
                headerContainer.classList.remove('header-hidden');
            }
            
            lastScrollTop = scrollTop;
        });
    </script>
</body>
